<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GithubUserApplication" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_blue_500</item>
        <item name="colorPrimaryVariant">@color/light_blue</item>
        <item name="colorOnPrimary">@color/gray</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/light_blue</item>
        <item name="colorSecondaryVariant">@color/light_gray</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/light_blue</item>

        <item name="tab_active">@color/light_gray</item>
        <item name="tab_inactive">@color/light_blue_500</item>
    </style>

    <style name="BackGroundApp">
        <item name="android:background">@color/light_gray</item>
    </style>

    <style name="TabTextColor">
        <item name="tabTextColor">@color/white</item>
        <item name="tabSelectedTextColor">@color/light_blue</item>
    </style>
</resources>